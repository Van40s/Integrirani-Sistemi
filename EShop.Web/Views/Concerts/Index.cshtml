@model IEnumerable<EShop.Web.Models.Concert>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div style="display: flex; justify-content: space-evenly;">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@item.pictureURI" class="card-img-top" alt="Concert Image">
                <div class="card-body">
                    <h5 class="card-title">@item.concertName</h5>
                    <p class="card-text">Location: @item.location</p>
                    <p class="card-text">Date and Time: @item.dateAndTime.ToString("yyyy-MM-dd HH:mm")</p>
                    <p class="card-text">Price: @item.concertPrice</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
